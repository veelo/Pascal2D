{
	"name": "pascal2d",
	"description": "Transcompiler from Prospero Extended Pascal to D.",
	"authors": [
		"Bastiaan N. Veelo"
	],
	"copyright": "Copyright Â© 2018, Bastiaan N. Veelo, SARC B.V.",
	"license": "boost",
	"dependencies": {
		"pegged": "~>0.4.2",
		"pascal2d:epcompat": "*"
	},
	"subPackages": [
		"./epcompat",
		"./examples/hello"
	],
	"excludedSourceFiles": [
		"source/epgrammar.d",
		"source/generate.d",
		"source/make.d"
	],
	"preGenerateCommands": [
		"cd $PACKAGE_DIR/source && rdmd make.d $PEGGED_PACKAGE_DIR"
	],
	"configurations": [
		{
			"COMMENT": "dub build --config=\"ddox\" -b ddox",
			"name": "ddox",
			"sourcePaths": [
				"epcompat/source/epcompat"
			],
			"COMMENT": "Because of https://issues.dlang.org/show_bug.cgi?id=18211",
			"excludedSourceFiles": [
				"epcompat/source/epcompat/enumeration.d"
			]
		}
	],
	"-ddoxFilterArgs": [
		"--unittest-examples",
		"--min-protection=Protected"
	],
	"-ddoxTool": "scod"
}
